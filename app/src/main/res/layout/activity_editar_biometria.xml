<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPaciente.Analisis.Editar.EditarBiometria"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/colorFondoLogin">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_ripple_gray"
        android:contentDescription="@string/registrar_paciente"
        android:src="@mipmap/back_icon_orange" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="2dp">
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/sfpro"
                android:text="@string/editar_analisis"
                android:textColor="#535353"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@mipmap/biometria_icon"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:text="@string/nombre_analisis"
                android:textColor="#505050"/>
            <EditText
                android:id="@+id/etNombreAnalisis"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLength="20"
                android:fontFamily="@font/sfpro"
                android:inputType="textPersonName"
                android:paddingVertical="6dp"
                android:background="@drawable/custom_edit_text"/>
            <Button
                android:id="@+id/bActualizarNombre"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/act_nombre"
                android:textColor="@color/colorFondoLogin"
                android:background="@drawable/button_rounded_gradient_orange"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:text="@string/fecha"
                android:textColor="#505050"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dia"
                    android:fontFamily="@font/sfpro"/>
                <EditText
                    android:id="@+id/etDiaAnalisis"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:fontFamily="@font/sfpro"
                    android:inputType="number"
                    android:paddingVertical="4dp"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mes"
                    android:fontFamily="@font/sfpro"/>
                <EditText
                    android:id="@+id/etMesAnalisis"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:fontFamily="@font/sfpro"
                    android:inputType="number"
                    android:paddingVertical="4dp"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aÃ±o"
                    android:fontFamily="@font/sfpro"/>
                <EditText
                    android:id="@+id/etAnoAnalisis"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="4"
                    android:fontFamily="@font/sfpro"
                    android:inputType="number"
                    android:paddingVertical="4dp"
                    android:background="@drawable/custom_edit_text"/>
            </LinearLayout>
            <Button
                android:id="@+id/bActualizarFecha"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/act_fecha"
                android:textColor="@color/colorFondoLogin"
                android:background="@drawable/button_rounded_gradient_orange"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/parametro"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/colorOrangeFuerte"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginStart="28dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/valor_anterior"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/colorOrangeFuerte"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:layout_height="wrap_content"
                    android:text="@string/valor"
                    android:textColor="@color/colorOrangeFuerte"
                    android:fontFamily="@font/sfpro"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/sfpro"
                    android:gravity="center"
                    android:textColor="@color/colorOrangeFuerte"
                    android:text="@string/unidades"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/leucocitos"
                    android:fontFamily="@font/sfpro"
                    android:textColor="#505050"/>
                <TextView
                    android:id="@+id/tvGlucosaAnterior"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:gravity="center"
                    android:text="@string/valor_anterior"
                    android:fontFamily="@font/sfpro"
                    android:textColor="#505050"/>
                <EditText
                    android:id="@+id/etLeucocitos"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/sfpro"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:id="@+id/tvUnidadesLeucocitos"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/unidades_glucosa_quimica"
                    android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/eritrocitos"
                    android:textColor="#505050"/>
                <TextView
                    android:id="@+id/tvColesterolAnterior"
                    android:layout_marginStart="28dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/valor_anterior"
                    android:fontFamily="@font/sfpro"
                    android:textColor="#505050"/>
                <EditText
                    android:id="@+id/etEritrocitos"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/sfpro"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:id="@+id/tvUnidadesEritrocitos"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/unidades_colesterol_quimica"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/plaquetas"
                    android:textColor="#505050"/>
                <TextView
                    android:id="@+id/tvHierroAnterior"
                    android:layout_marginStart="28dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/valor_anterior"
                    android:fontFamily="@font/sfpro"
                    android:textColor="#505050"/>
                <EditText
                    android:id="@+id/etPlaquetas"
                    android:layout_marginStart="26dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/sfpro"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:id="@+id/tvUnidadesPlaquetas"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/unidadaes_hierro_quimica"
                    android:textStyle="italic"/>
            </LinearLayout>
            <Button
                android:id="@+id/bActualizarDatos"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_gradient_orange"
                android:text="@string/act_datos"
                android:textColor="@color/colorFondoLogin"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>