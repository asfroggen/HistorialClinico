<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPaciente.Configuracion.ActualizarDatosPersonales"
    android:background="@color/colorFondoLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <ImageView
                android:id="@+id/ivBack"
                android:background="@drawable/button_ripple_gray"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/back_icon_orange"
                android:contentDescription="@string/datos_personales" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:text="@string/datos_personales"
                android:textColor="@color/colorOrangeFuerte"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="15dp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="28dp"
                android:paddingHorizontal="10dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:background="@drawable/linear_rounded_gray"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/nombre_reg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:layout_editor_absoluteX="40dp"
                    tools:layout_editor_absoluteY="28dp" />

                <EditText
                    android:id="@+id/etActualizarNombre"
                    android:drawableStart="@drawable/custom_namel_icon"
                    android:drawablePadding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:fontFamily="@font/sfpro"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/bActualizarNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rounded_gradient_orange"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/act_nombre"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/seg_nombre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/etActualizarSegNombre"
                    android:drawableStart="@drawable/custom_namel_icon"
                    android:drawablePadding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:fontFamily="@font/sfpro"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/bActualizarSegNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rounded_gradient_orange"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/act_seg_nombre"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/apellido_p"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/etActualizarApellidoP"
                    android:drawableStart="@drawable/custom_namel_icon"
                    android:drawablePadding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:fontFamily="@font/sfpro"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/bActualizarApellidoP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rounded_gradient_orange"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/act_apellido_p"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/apellido_m"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/etActualizarApellidoM"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_namel_icon"
                    android:drawablePadding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:ems="10"
                    android:fontFamily="@font/sfpro"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/bActualizarApellidoM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rounded_gradient_orange"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/act_apellido_m"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro"
                    android:layout_marginTop="10dp"
                    android:text="@string/sexo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="294dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rbMasculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorOrangeFuerte"
                        android:checked="true"
                        android:fontFamily="@font/sfpro"
                        android:layout_marginHorizontal="20dp"
                        android:text="@string/masculino" />


                    <RadioButton
                        android:id="@+id/rbFemenino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorOrangeFuerte"
                        android:checked="false"
                        android:fontFamily="@font/sfpro"
                        android:layout_marginHorizontal="20dp"
                        android:text="@string/femenino" />


                </RadioGroup>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/bActualizarSexo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_rounded_gradient_orange"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/act_sexo"
                    android:textColor="#FFFFFF" />
                <TextView
                    android:id="@+id/textView133"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro"
                    android:gravity="center"
                    android:text="@string/fecha_nac"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/textView134"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro"
                        android:text="@string/dia"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    <EditText
                        android:id="@+id/etDiaNac"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/custom_edit_text"
                        android:ems="10"
                        android:fontFamily="@font/sfpro"
                        android:inputType="number"
                        android:paddingVertical="8dp"
                        android:autofillHints=""
                        tools:ignore="LabelFor"
                        android:maxLength="2"
                        android:layout_marginHorizontal="5dp"/>
                    <TextView
                        android:id="@+id/textView135"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro"
                        android:text="@string/mes"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    <EditText
                        android:id="@+id/etMesNac"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:gravity="center"
                        android:ems="10"
                        android:fontFamily="@font/sfpro"
                        android:inputType="number"
                        android:paddingVertical="8dp"
                        android:autofillHints=""
                        tools:ignore="LabelFor"
                        android:maxLength="2"
                        android:layout_marginHorizontal="5dp"/>
                    <TextView
                        android:id="@+id/textView136"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro"
                        android:text="@string/año"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    <EditText
                        android:id="@+id/etAnoNac"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:ems="10"
                        android:fontFamily="@font/sfpro"
                        android:inputType="number"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:autofillHints=""
                        android:maxLength="4"
                        tools:ignore="LabelFor"
                        android:layout_marginHorizontal="5dp"/>
                </LinearLayout>


                    <Button
                        android:id="@+id/bActualizarFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/button_rounded_gradient_orange"
                        android:fontFamily="@font/sfpro"
                        android:text="@string/actualizar_fecha_nac"
                        android:textColor="#FFFFFF" />


                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>