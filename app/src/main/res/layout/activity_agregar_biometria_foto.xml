<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPaciente.Analisis.Agregar.AgregarBiometriaFoto"
    android:background="@color/colorFondoLogin"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivBack"
        android:background="@drawable/button_ripple_gray"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginHorizontal="8dp"
        android:src="@mipmap/back_icon_orange"
        android:contentDescription="@string/contacto_programador" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sfpro"
                android:text="@string/nuevo_biometria"
                android:textColor="#505050"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@mipmap/biometria_ocr" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfpro"
                android:text="@string/nombre_analisis"
                android:textColor="#505050"/>

            <EditText
                android:id="@+id/etNombreAnalisis"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLength="20"
                android:fontFamily="@font/sfpro"
                android:inputType="textPersonName"
                android:paddingVertical="4dp"
                android:background="@drawable/custom_edit_text"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNombreAnalisis"
                android:fontFamily="@font/sfpro"
                android:text="@string/fecha"
                android:textColor="#505050"/>
            <LinearLayout
                android:id="@+id/llFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_below="@+id/ivFoto"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dia"
                    android:fontFamily="@font/sfpro"/>
                <EditText
                    android:id="@+id/etDiaAnalisis"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:fontFamily="@font/sfpro"
                    android:inputType="number"
                    android:paddingVertical="4dp"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mes"
                    android:fontFamily="@font/sfpro"/>
                <EditText
                    android:id="@+id/etMesAnalisis"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:fontFamily="@font/sfpro"
                    android:inputType="number"
                    android:paddingVertical="4dp"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aÃ±o"
                    android:fontFamily="@font/sfpro"/>
                <EditText
                    android:id="@+id/etAnoAnalisis"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="4"
                    android:fontFamily="@font/sfpro"
                    android:inputType="number"
                    android:paddingVertical="4dp"
                    android:background="@drawable/custom_edit_text"/>
            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfpro"
                android:text="@string/datos_obtenidos"
                android:textColor="#505050"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/parametro"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/colorOrangeFuerte"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:layout_height="wrap_content"
                    android:text="@string/valor"
                    android:textColor="@color/colorOrangeFuerte"
                    android:fontFamily="@font/sfpro"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/sfpro"
                    android:gravity="center"
                    android:textColor="@color/colorOrangeFuerte"
                    android:text="@string/unidades"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/leucocitos"
                    android:textColor="#505050"/>

                <EditText
                    android:id="@+id/etLeucocitos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:fontFamily="@font/sfpro"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:paddingVertical="4dp" />
                <TextView
                    android:id="@+id/tvUnidadesLeucocitos"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/unidades_leucocitos_biometria"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/eritrocitos"
                    android:textColor="#505050"/>
                <EditText
                    android:id="@+id/etEritrocitos"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/sfpro"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:id="@+id/tvUnidadesEritrocitos"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/unidades_eritrocitos_biometria"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/plaquetas"
                    android:textColor="#505050"/>
                <EditText
                    android:id="@+id/etPlaquetas"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:background="@drawable/custom_edit_text"/>
                <TextView
                    android:id="@+id/tvUnidadesPlaquetas"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro"
                    android:text="@string/unidades_plaquetas_biometria"
                    android:textStyle="italic"/>
            </LinearLayout>

            <Button
                android:id="@+id/bTomarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_rounded_orange"
                android:text="@string/subir_foto_analisis"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/bGuardarAnalisis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_rounded_contorn_orange"
                android:text="@string/guardar_analisis"
                android:textColor="@color/colorOrangeFuerte"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>